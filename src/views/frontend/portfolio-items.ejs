        url: "/api/portfolios/" + portfolio_id,
        success: function (data, textStatus, jqXHR) {
          tablename.row(row.parents('tr')).remove().draw();
          alert(data.message);
        },
        error: function (error) {
          console.log(error.responseJSON);
        }
      });
    });

