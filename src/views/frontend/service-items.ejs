    <script>
      $(document).ready(function () {
             localStorage.removeItem("service_edid"); 
          //   var base_url = "https://movonnewbucket.s3.amazonaws.com/images/";
             var base_url = "/uploads/";
             let authorizationToken = "Bearer "+ window.localStorage.getItem("token");
             $.ajax({
                 method:"get",
                 beforeSend: function(request) {
                request.setRequestHeader("Authorization", authorizationToken);
                },
                 url: "/api/services", 
                 success: function(data, textStatus, jqXHR)
                 {
                  var services = data.data.services;
                  var newServices = [];
                  var i = 1;
                  $.each( services, function( key, value ) {
                        value.no = i;
                        newServices.push(value);
                        i++;               
                  });
                   $('#myTable').DataTable( {
                        data: newServices,
                        columns: [
                            { data: 'no' },
                            { data: 'title' },
                            { data: 'short_title' },
                            { data: 'description' },
                            { data: 'image',render: function (data, type, row, meta) {
                                return '<img src="' + base_url+data + '" height="50" width="50"/>';
                              }
                            },
                            { data: 'service_id',render: function (data, type, row, meta) {
                                return `<button onclick="editData(${data})" value="'+data+'" class="btn btn-primary">Edit</button>`;
                              }
                            },
                            { data: 'service_id',render: function (data, type, row, meta) {
                                return `<button onclick="deleteData(${data})" value="'+data+'" class="btn btn-danger"><i style="cursor:pointer;" class="fa fa-trash" aria-hidden="true"></i></button>`;
                              }
                            }
                        ]
                    } );
                    //$('#myTable').DataTable();
                 },
                 error: function(error)
                 {
                    console.log(error.responseJSON);
                 }
               });

          //  });
      });

      
      function editData(id){
        window.localStorage.setItem("service_edid",id);
        window.location = "/frontend-management/services";
      }
     
      function deleteData(id){
        let authorizationToken = "Bearer "+ window.localStorage.getItem("token");
        $.ajax({
                 method:"delete",
                 beforeSend: function(request) {
                request.setRequestHeader("Authorization", authorizationToken);
                },
                 url: "/api/services/"+id, 
                 success: function(data, textStatus, jqXHR)
                 {
                  
                  successToast(data.message);
                  setTimeout(()=>{
                    window.location.reload();
                  },1000)
                 },
                 error: function(error)
                 {
                    errorToast(error.responseJSON.message);
                 }
               });
      }
      
